#content{:class => 'alpha grid_8'}
  %h2= @feed.title
  - @entries.each do |entry|
    %h6= link_to entry.title, entry
    = "Posted on: #{entry.updated_at.strftime("%d %b %Y, %H:%M")}"
    - if entry.author 
      = ", Author: #{entry.author}" 
    %p= link_to truncate(entry.summary.gsub(/<\/?.*?>/, ""), :length => 200), entry
  = will_paginate @entries

#sidebar{:class => 'omega grid_4'}
  %h3 Other feeds:
  %ul
    - @other_feeds.each do |feed|
      %li= link_to "#{feed.title}", feed 
