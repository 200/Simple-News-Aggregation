#content{:class => 'alpha grid_8'}
  %h2= @feed.title
  - @entries.each do |entry|
    %h6= link_to "#{entry.title}", entry
    = "Posted on: #{entry.updated_at.strftime("%d %b %Y, %H:%M")}"
    - if entry.author 
      = ", Author: #{entry.author}" 
    %p= truncate(sanitize(entry.summary.gsub(/<\/?.*?>/, ""), :tags => %w()), :length => 200)
  = will_paginate @entries
#sidebar{:class => 'omega grid_4'}
  %h3 Other news:
  %ul
    - @other_entries.each do |entry|
      %li= link_to "#{entry.title}", entry
