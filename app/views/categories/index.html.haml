#content{:class => 'alpha grid_8'}
  - if flash[:notice]
    = flash[:notice]
  - @categories.each do |category|
    %h3= link_to "#{category.name}", category
    .catcontent
      .spacer1
      - category.feeds.all(:order => 'updated_at', :limit => 5).each do |feed|
        %span
          = link_to "#{feed.title}", feed
        %br
  .spacer1
#sidebar{:class => 'omega grid_4'}
  %h3 Last 10 news:
  %ul
    - @feeds.each do |feed|
      %li= link_to "#{feed.title}", feed
