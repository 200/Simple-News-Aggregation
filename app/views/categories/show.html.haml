#content{:class => 'alpha grid_8'}
  - if flash[:notice]
    = flash[:notice]
  %h2= @category.name 
  %h4= link_to "See last news in #{@category.name}", #
  #tip TIP: you can use form from sidebar on your right to add feed to this category. Enjoy!
  .spacer1
  - @category.feeds.each do |feed|
    %h3= feed.title
    %ul
      %li entry (data)
      %li entry (data)
      %li entry (data)
      %li entry (data)
      %li entry (data)
