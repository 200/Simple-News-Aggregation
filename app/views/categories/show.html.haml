#content{:class => 'alpha grid_8'}
  %h2= @category.name 
  #tip TIP: you can use form from sidebar on your right to add feed to this category. Enjoy!
  - @category.feeds.each do |feed|
    %h3= link_to "#{feed.title}", feed
    .record_content
      .spacer1
      - feed.entries.all(:order => 'updated_at DESC', :limit => 5).each do |entry|
        %span= link_to "#{entry.title}", entry
        %br
#sidebar{:class => 'omega grid_4'}
  %h3=link_to "See last news in this category", :action => 'last_entries', :id => @category 
  %h3 Other categories: 
  %ul
    - @categories.each do |category|
      %li= link_to "#{category.name}", category
